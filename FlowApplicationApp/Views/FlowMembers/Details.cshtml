@model FlowApplicationApp.ViewModels.FlowMembers.FlowMemberDetailsViewModel

@{
    ViewData["Title"] = "Flow Member Details";
}

<div class="container-fluid bg-dark py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card shadow-lg border-0" style="border-radius: 1.5rem;">
                    <div class="card-body p-5">
                        <div class="row g-4">
                            <!-- Profile Image Side -->
                            <div class="col-12 col-md-4 d-flex flex-column align-items-center">
                                <div class="mb-3">
                                    <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/img/default-avatar.png")" 
                                         alt="@Model.FullName" 
                                         class="rounded-circle shadow" 
                                         style="width: 200px; height: 200px; object-fit: cover; border: 4px solid var(--bs-success);" />
                                </div>
                                <h3 class="text-center mb-2">@Model.FullName</h3>
                                <p class="text-muted text-center mb-1">
                                    <i class="bi bi-envelope"></i> @Model.Email
                                </p>
                                <p class="text-muted text-center mb-3">
                                    <i class="bi bi-person-circle"></i> @@@Model.UserName
                                </p>
                                
                                <div class="card w-100 mt-3 shadow-sm" style="border-radius: 1rem;">
                                    <div class="card-body text-center p-4">
                                        <h6 class="card-subtitle mb-3 text-muted">Status</h6>
                                        <span class="badge bg-success fs-6 mb-3">Flow Member</span>
                                        
                                        <div class="mt-2">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </div>
                                        
                                        @if (Model.Roles.Any())
                                        {
                                            <div class="mt-3">
                                                <h6 class="card-subtitle mb-2 text-muted">Roles</h6>
                                                @foreach (var role in Model.Roles)
                                                {
                                                    <span class="badge bg-info me-1 mb-1">@role</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                                
                                <div class="card w-100 mt-3 shadow-sm" style="border-radius: 1rem;">
                                    <div class="card-body text-center p-4">
                                        <h6 class="card-subtitle mb-2 text-muted">Member Since</h6>
                                        <p class="mb-0">@Model.CreatedOn.ToString("MMMM dd, yyyy")</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Details Side -->
                            <div class="col-12 col-md-8">
                                <h2 class="mb-4 pb-2 border-bottom">Personal Information</h2>
                                
                                <div class="card shadow-sm mb-3" style="border-radius: 1rem;">
                                    <div class="card-body p-4">
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Date of Birth:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.DoB.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>WhatsApp Number:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.WhatsAppNumber
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <strong>Biography:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                <p class="mb-0">@Model.Bio</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <h2 class="mb-4 pb-2 border-bottom mt-4">Spiritual Journey</h2>
                                
                                <div class="card shadow-sm mb-3" style="border-radius: 1rem;">
                                    <div class="card-body p-4">
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Born Again Date:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.BornAgainDate.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Water Baptism:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.WaterBaptismDate.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Holy Spirit Baptism:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.HolySpiritBaptismDate.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Hears God:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @if (Model.HearsGod)
                                                {
                                                    <span class="badge bg-success">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No</span>
                                                }
                                            </div>
                                        </div>
                                        
                                        @if (Model.HearsGod)
                                        {
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <strong>How They Started:</strong>
                                                </div>
                                                <div class="col-sm-8">
                                                    <p class="mb-0">@Model.HowTheyStartedHearingGod</p>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <h2 class="mb-4 pb-2 border-bottom mt-4">Why They Joined Flow</h2>
                                
                                <div class="card shadow-sm mb-3" style="border-radius: 1rem;">
                                    <div class="card-body p-4">
                                        <p class="mb-0">@Model.CoverSpeech</p>
                                    </div>
                                </div>

                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="mt-4 d-flex gap-2">
                                        <a asp-action="Index" class="btn btn-secondary btn-lg" style="border-radius: 0.75rem;">
                                            <i class="bi bi-arrow-left"></i> Back to List
                                        </a>
                                        <button type="button" class="btn btn-warning btn-lg" style="border-radius: 0.75rem;">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button type="button" class="btn btn-danger btn-lg" style="border-radius: 0.75rem;">
                                            <i class="bi bi-person-x"></i> Deactivate
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
