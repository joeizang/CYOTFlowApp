@model FlowApplicationApp.ViewModels.FlowMembers.FlowMemberDetailsViewModel

@{
    ViewData["Title"] = "Flow Member Details";
}

<style>
    .page-bg {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    }
    
    .glass-effect {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
    }
    
    .header-gradient {
        background: linear-gradient(135deg, var(--bs-warning) 0%, #f0ad4e 100%);
    }
    
    .avatar-lg {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }
    
    .info-label-width {
        min-width: 200px;
    }
    
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .hover-lift:hover {
        transform: translateY(-2px);
    }
    
    /* Custom button styles */
    .btn-glass-secondary {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #ffffff;
    }
    .btn-glass-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.5);
        color: #ffffff;
    }
    
    .btn-glass-danger {
        background: rgba(220, 53, 69, 0.2);
        border: 1px solid rgba(220, 53, 69, 0.5);
        color: #ff6b6b;
    }
    .btn-glass-danger:hover {
        background: rgba(220, 53, 69, 0.3);
        border-color: rgba(220, 53, 69, 0.7);
        color: #ff6b6b;
    }
    
    .btn-glass-info {
        background: rgba(13, 202, 240, 0.2);
        border: 1px solid rgba(13, 202, 240, 0.5);
        color: #6dd5ed;
    }
    .btn-glass-info:hover {
        background: rgba(13, 202, 240, 0.3);
        border-color: rgba(13, 202, 240, 0.7);
        color: #6dd5ed;
    }
</style>

<div class="page-bg min-vh-100 py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert text-bg-success d-flex align-items-center rounded-4 alert-dismissible fade show mb-4" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong>Success!</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card glass-effect border-2 border-warning rounded-4 shadow-lg overflow-hidden">
                    <div class="card-header header-gradient text-black p-4 border-0">
                        <h2 class="mb-0 h3 fw-bold">
                            <i class="bi bi-person-circle me-2"></i>Flow Member Details
                        </h2>
                    </div>
                    <div class="card-body p-4 p-lg-5 text-white">
                        <!-- Member Profile Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4 text-center">
                            <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/img/default-avatar.png")" 
                                 alt="@Model.FullName" 
                                 class="avatar-lg rounded-circle border border-4 border-warning shadow mb-3" />
                            <h3 class="text-warning fw-bold fs-2 mb-2">@Model.FullName</h3>
                            <p class="text-white-50 mb-1"><i class="bi bi-envelope me-2"></i>@Model.Email</p>
                            <p class="text-white-50 mb-3"><i class="bi bi-person-circle me-2"></i>@@@Model.UserName</p>
                            
                            <div class="d-flex justify-content-center flex-wrap gap-2 mt-3">
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    <i class="bi bi-check-circle me-1"></i>Flow Member
                                </span>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success fs-6 px-3 py-2">
                                        <i class="bi bi-activity me-1"></i>Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6 px-3 py-2">
                                        <i class="bi bi-pause-circle me-1"></i>Inactive
                                    </span>
                                }
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-white-50">
                                    <i class="bi bi-calendar-check me-1"></i>Member since @Model.CreatedOn.ToString("MMMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                        
                        <!-- Roles Section -->
                        @if (Model.Roles.Any())
                        {
                            <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4">
                                <h5 class="text-warning fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                    <i class="bi bi-shield-check"></i>
                                    Flow Roles
                                </h5>
                                <div>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <span class="badge bg-success fs-6 px-3 py-2 me-2 mb-2">
                                            <i class="bi bi-shield-check me-1"></i>@role
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                        
                        <!-- Code of Conduct Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4">
                            <h5 class="text-warning fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                <i class="bi bi-file-earmark-text"></i>
                                Code of Conduct
                            </h5>
                            @if (Model.HasUploadedCodeOfConduct)
                            {
                                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                                    <div>
                                        <span class="badge bg-success me-2">
                                            <i class="bi bi-file-earmark-check-fill me-1"></i>Uploaded
                                        </span>
                                        @if (Model.CodeOfConductUploadedAt.HasValue)
                                        {
                                            <span class="text-white-50">
                                                on @Model.CodeOfConductUploadedAt.Value.ToString("MMM dd, yyyy")
                                            </span>
                                        }
                                    </div>
                                    @if (User.IsInRole("Admin") || User.Identity?.Name == Model.UserName)
                                    {
                                        <a href="@Url.Action("DownloadCodeOfConduct", "FlowMembers", new { id = Model.Id })" 
                                           class="btn btn-sm btn-glass-secondary hover-lift">
                                            <i class="bi bi-download"></i> Download
                                        </a>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0 border-warning border-opacity-50 bg-warning bg-opacity-25 text-warning d-flex align-items-center rounded-3">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    Member needs to upload signed document
                                </div>
                            }
                        </div>
                        
                        <!-- Personal Information Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4">
                            <h5 class="text-warning fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                <i class="bi bi-person-badge"></i>
                                Personal Information
                            </h5>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Date of Birth:</div>
                                <div class="text-white flex-grow-1">@Model.DoB.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">WhatsApp Number:</div>
                                <div class="text-white flex-grow-1">@Model.WhatsAppNumber</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-0 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Biography:</div>
                                <div class="text-white flex-grow-1 text-wrap text-break">@Model.Bio</div>
                            </div>
                        </div>

                        <!-- Spiritual Journey Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4">
                            <h5 class="text-warning fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                <i class="bi bi-heart"></i>
                                Spiritual Journey
                            </h5>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Born Again Date:</div>
                                <div class="text-white flex-grow-1">@Model.BornAgainDate.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Water Baptism:</div>
                                <div class="text-white flex-grow-1">@Model.WaterBaptismDate.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Holy Spirit Baptism:</div>
                                <div class="text-white flex-grow-1">@Model.HolySpiritBaptismDate.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Hears God:</div>
                                <div class="text-white flex-grow-1">
                                    @if (Model.HearsGod)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle me-1"></i>No
                                        </span>
                                    }
                                </div>
                            </div>
                            @if (Model.HearsGod)
                            {
                                <div class="d-flex py-3 border-bottom border-0 flex-column flex-md-row">
                                    <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">How They Started:</div>
                                    <div class="text-white flex-grow-1 text-wrap text-break">@Model.HowTheyStartedHearingGod</div>
                                </div>
                            }
                        </div>

                        <!-- Why They Joined Flow Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4">
                            <h5 class="text-warning fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                <i class="bi bi-chat-quote"></i>
                                Why They Joined Flow
                            </h5>
                            <div class="text-white-50 text-wrap text-break" style="line-height: 1.6;">
                                @Model.CoverSpeech
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex gap-2 flex-wrap justify-content-end mt-4">
                                <a asp-action="Index" class="btn btn-glass-secondary hover-lift fw-semibold px-4 py-2 rounded-3">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                                <a asp-action="UpdateRoles" asp-route-id="@Model.Id" class="btn btn-warning hover-lift fw-bold px-4 py-2 rounded-3 text-black">
                                    <i class="bi bi-person-gear me-2"></i>Manage Roles
                                </a>
                                <button type="button" class="btn btn-glass-info hover-lift fw-semibold px-4 py-2 rounded-3">
                                    <i class="bi bi-pencil me-2"></i>Edit
                                </button>
                                <button type="button" class="btn btn-glass-danger hover-lift fw-semibold px-4 py-2 rounded-3">
                                    <i class="bi bi-person-x me-2"></i>Deactivate
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex justify-content-end mt-4">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-glass-secondary hover-lift fw-semibold px-4 py-2 rounded-3">
                                    <i class="bi bi-arrow-left me-2"></i>Back to Home
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const handleSpanClick = () => {
            
        }
    </script>
}