@model FlowApplicationApp.ViewModels.CodeOfConduct.ManageVersionsViewModel

@{
    ViewBag.Title = "Manage Code of Conduct Versions";
    Layout = "_Layout";
}

<div class="container my-4 my-md-5">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                    <h1 class="display-5 display-md-4 mb-0">Code of Conduct Versions</h1>
                    <div class="d-flex flex-column flex-sm-row gap-2 w-100 w-md-auto">
                        <a href="@Url.Action("Upload", "CodeOfConduct")" class="btn btn-primary rounded">
                            <i class="bi bi-upload"></i> Upload New Version
                        </a>
                        <a href="@Url.Action("Index", "CodeOfConduct")" class="btn btn-secondary rounded">
                            <i class="bi bi-eye"></i> View Current
                        </a>
                    </div>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!Model.Versions.Any())
            {
                <div class="alert alert-info rounded">
                    <h5 class="alert-heading">No versions available</h5>
                    <p class="mb-0">No Code of Conduct documents have been uploaded yet.</p>
                </div>
            }
            else
            {
                <div class="card shadow-sm rounded">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Version</th>
                                        <th>File Name</th>
                                        <th>Uploaded Date</th>
                                        <th>Uploaded By</th>
                                        <th>File Size</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var version in Model.Versions)
                                    {
                                        <tr class="@(version.IsActive ? "table-primary" : "")">
                                            <td>
                                                <strong>v@version.Version</strong>
                                            </td>
                                            <td>@version.FileName</td>
                                            <td>@version.UploadedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>@(version.UploadedByMember?.UserName ?? "Unknown")</td>
                                            <td>@((version.FileSize / 1024.0).ToString("F2")) KB</td>
                                            <td>
                                                @if (version.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("DownloadVersion", "CodeOfConduct", new { id = version.Id })" 
                                                       class="btn btn-outline-primary rounded-start"
                                                       title="Download">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                    @if (!version.IsActive)
                                                    {
                                                        <form method="post" 
                                                              asp-action="Activate" 
                                                              asp-controller="CodeOfConduct" 
                                                              asp-route-id="@version.Id"
                                                              class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" 
                                                                    class="btn btn-outline-success rounded-end"
                                                                    title="Set as Active"
                                                                    onclick="return confirm('Are you sure you want to activate this version?');">
                                                                <i class="bi bi-check-circle"></i> Activate
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
