@model FlowApplicationApp.ViewModels.CodeOfConduct.UploadCodeOfConductViewModel

@{
    ViewBag.Title = "Upload Code of Conduct";
    Layout = "_Layout";
}

<div class="container my-4 my-md-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white rounded-top">
                    <h2 class="mb-0 h3 h-md-2">Upload Code of Conduct</h2>
                </div>
                <div class="card-body p-3 p-md-4">
                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success rounded" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <strong>Success!</strong> @Model.Message
                        </div>
                        <div class="mt-3">
                            <a href="@Url.Action("Index", "CodeOfConduct")" class="btn btn-primary">
                                View Code of Conduct
                            </a>
                            <a href="@Url.Action("Versions", "CodeOfConduct")" class="btn btn-secondary ms-2">
                                Manage Versions
                            </a>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-danger rounded" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Error:</strong> @Model.Message
                            </div>
                        }

                        <form method="post" enctype="multipart/form-data" asp-action="Upload" asp-controller="CodeOfConduct">
                            @Html.AntiForgeryToken()
                            
                            <div class="mb-4">
                                <label for="file" class="form-label">
                                    <strong>Select Document</strong>
                                </label>
                                <input type="file" 
                                       class="form-control" 
                                       id="file" 
                                       name="file" 
                                       accept=".docx" 
                                       required />
                                <div class="form-text">
                                    Only .docx files are accepted. Maximum file size: 5MB
                                </div>
                            </div>

                            <div class="alert alert-info rounded">
                                <h6 class="alert-heading">
                                    <i class="bi bi-info-circle-fill me-2"></i>Important Notes:
                                </h6>
                                <ul class="mb-0">
                                    <li>The uploaded document will be converted to HTML for web display</li>
                                    <li>The original .docx file will be available for download</li>
                                    <li>This will create a new version and automatically set it as active</li>
                                    <li>All users will be able to view and download the document</li>
                                </ul>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a href="@Url.Action("Index", "CodeOfConduct")" class="btn btn-secondary rounded">
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary rounded">
                                    <i class="bi bi-upload me-2"></i>Upload Document
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
