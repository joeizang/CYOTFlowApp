@model FlowApplicationApp.ViewModels.Auditions.CreateAuditionerInputModel

@{
  ViewData["Title"] = "Auditions Form";
}

<style>
    .auditions-hero-section {
        min-height: 100vh;
        display: flex;
        position: relative;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }
    
    .auditions-hero-image {
        width: 40%;
        min-height: 100vh;
        background-image: url('/img/confidentprayer.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.4;
        flex-shrink: 0;
        position: relative;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 2rem;
    }
    
    .auditions-hero-image-text {
        position: absolute;
        top: 2rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: #ffffff;
        text-align: center;
        padding: 0 1rem;
        z-index: 1;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        letter-spacing: 0.5px;
        opacity: 1;
    }
    
    .auditions-hero-content {
        width: 60%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        flex-shrink: 0;
        overflow-y: auto;
    }
    
    .audition-form {
        width: 100%;
        max-width: 600px;
        padding: 0 1rem;
    }
    
    .audition-form .form-control,
    .audition-form .form-select {
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        border: 2px solid #ffc107;
        transition: all 0.3s ease;
    }
    
    .audition-form .form-check-input {
        border: 2px solid #ffc107;
        border-radius: 0.25rem;
        width: 1.25em;
        height: 1.25em;
        margin-top: 0.125em;
    }
    
    .audition-form .form-check-input:focus {
        border-color: #ffca2c;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
    
    .audition-form .form-check-input:checked {
        background-color: #ffc107;
        border-color: #ffc107;
    }
    
    .audition-form .form-control:focus,
    .audition-form .form-select:focus {
        border-color: #ffca2c;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
    
    .audition-form textarea.form-control {
        resize: vertical;
    }
    
    .audition-form .btn-primary {
        padding: 0.75rem 2rem;
        border-radius: 0.5rem;
        font-weight: 500;
    }
    
    .audition-form h2 {
        margin-bottom: 2rem;
    }
    
    @@media (max-width: 768px) {
        .auditions-hero-section {
            flex-direction: column;
            height: auto;
            min-height: 100vh;
        }
        
        .auditions-hero-image {
            width: 100%;
            height: 150px;
            min-height: 150px;
            position: relative;
        }
        
        .auditions-hero-content {
            width: 100%;
            padding: 1.5rem 1rem;
            flex: 1;
        }
        
        .audition-form {
            padding: 0 0.5rem;
        }
        
        .audition-form h2 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }
    }
    
    @@media (max-width: 576px) {
        .audition-form .row .col-md-6 {
            margin-bottom: 0;
        }
        
        .audition-form .form-control,
        .audition-form .form-select {
            padding: 0.65rem 0.85rem;
            font-size: 0.95rem;
        }
    }
</style>

<section class="auditions-hero-section">
    <div class="auditions-hero-image"></div>
    <div class="auditions-hero-content">
        <div class="d-flex justify-content-between align-items-center mb-3" style="max-width: 600px; width: 100%;">
            <h3 class="text-start mb-0">We hope that you filling this form is the result of a deep conviction borne from the place of prayer and communion with the Holy Spirit. We pray that you will fulfill God's purpose for your life and ministry.</h3>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="mb-3" style="max-width: 600px; width: 100%;">
                <a href="@Url.Action("List", "Auditions")" class="btn btn-outline-light">
                    <i class="bi bi-list-ul"></i> View All Auditioners
                </a>
            </div>
        }
        <hr class="mb-4" style="width: 100%; max-width: 600px;">
        
        <form method="post" asp-action="CreateAuditioner" asp-controller="Auditions" class="audition-form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    <label class="small fw-bold text-secondary-emphasis">Format: +234xxxxxxxxxx</label>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="DoB" class="form-label"></label>
                <input asp-for="DoB" class="form-control" type="date" />
                <span asp-validation-for="DoB" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Bio" class="form-label"></label>
                <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="BornAgainDate" class="form-label"></label>
                <input asp-for="BornAgainDate" class="form-control" type="date" />
                <span asp-validation-for="BornAgainDate" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="ProfileImage" class="form-label"></label>
                <div class="file-upload">
                    <input asp-for="ProfileImage" class="form-control custom-file-input" type="file" accept="image/*" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                    <p class="form-text">Accepted image types: .jpg, .png, .webp. Maximum size: 1 MB.</p>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="WaterBaptismDate" class="form-label"></label>
                <input asp-for="WaterBaptismDate" class="form-control" type="date" />
                <span asp-validation-for="WaterBaptismDate" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="HolySpiritBaptismDate" class="form-label"></label>
                <input asp-for="HolySpiritBaptismDate" class="form-control" type="date" />
                <span asp-validation-for="HolySpiritBaptismDate" class="text-danger"></span>
            </div>
            
            <div class="mb-3 form-check">
                <input asp-for="HearsGod" class="form-check-input" type="checkbox" />
                <label asp-for="HearsGod" class="form-check-label"></label>
                <span asp-validation-for="HearsGod" class="text-danger d-block"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="HowTheyStartedHearingGod" class="form-label"></label>
                <textarea asp-for="HowTheyStartedHearingGod" class="form-control" rows="3"></textarea>
                <span asp-validation-for="HowTheyStartedHearingGod" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="CoverSpeech" class="form-label"></label>
                <textarea asp-for="CoverSpeech" class="form-control" rows="4"></textarea>
                <span asp-validation-for="CoverSpeech" class="text-danger"></span>
            </div>

            <div class="mb-3">
                    <input asp-for="HaveReadCoC" class="form-check-input me-2" type="checkbox" id="HaveReadCoC" />
                    <label asp-for="HaveReadCoC" class="form-label"></label>
                    <span asp-validation-for="HaveReadCoC" class="text-danger d-block"></span>
            </div>
            
            <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded" disabled>
                        Submit Audition Form
                    </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#HaveReadCoC').change(function() {
                if ($(this).is(':checked')) {
                    $('button[type="submit"]').prop('disabled', false);
                } else {
                    $('button[type="submit"]').prop('disabled', true);
                }
            });
        })
    </script>
}