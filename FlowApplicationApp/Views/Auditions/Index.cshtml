@{
  ViewData["Title"] = "Auditions Form";
}

<style>
    .auditions-hero-section {
        height: 100vh;
        display: flex;
        position: relative;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }
    
    .auditions-hero-image {
        width: 40%;
        height: 100%;
        background-image: url('/img/confidentprayer.jpg');
        background-size: cover;
        background-position: center;
        opacity: 0.4;
        flex-shrink: 0;
    }
    
    .auditions-hero-content {
        width: 60%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        flex-shrink: 0;
    }
    
    @@media (max-width: 768px) {
        .hero-section {
            flex-direction: column;
        }
        
        .hero-image,
        .hero-content {
            width: 100%;
            height: 50vh;
        }
    }
</style>

<section class="auditions-hero-section">
    <div class="auditions-hero-image"></div>
    <div class="auditions-hero-content">
    
    </div>
</section>