@model FlowApplicationApp.ViewModels.Auditions.AuditionerDetailsViewModel

@{
    ViewData["Title"] = "Auditioner Details";
}

<style>
    .page-bg {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    }
    
    .glass-effect {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
    }
    
    .header-gradient {
        background: linear-gradient(135deg, var(--bs-warning) 0%, #f0ad4e 100%);
    }
    
    .avatar-lg {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }
    
    .info-label-width {
        min-width: 200px;
    }
    
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .hover-lift:hover {
        transform: translateY(-2px);
    }
    
    /* Custom button styles to match previous look where Bootstrap standard colors aren't enough */
    .btn-glass-secondary {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #ffffff;
    }
    .btn-glass-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.5);
        color: #ffffff;
    }
    
    .btn-glass-success {
        background: rgba(40, 167, 69, 0.2);
        border: 1px solid rgba(40, 167, 69, 0.5);
        color: #5af78e;
    }
    .btn-glass-success:hover {
        background: rgba(40, 167, 69, 0.3);
        border-color: rgba(40, 167, 69, 0.7);
        color: #5af78e;
    }
    
    .btn-glass-info {
        background: rgba(13, 202, 240, 0.2);
        border: 1px solid rgba(13, 202, 240, 0.5);
        color: #6dd5ed;
    }
    .btn-glass-info:hover {
        background: rgba(13, 202, 240, 0.3);
        border-color: rgba(13, 202, 240, 0.7);
        color: #6dd5ed;
    }
</style>

<div class="page-bg min-vh-100 py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card glass-effect border-2 border-warning rounded-4 shadow-lg overflow-hidden">
                    <div class="card-header header-gradient text-black p-4 border-0">
                        <h2 class="mb-0 h3 fw-bold">
                            <i class="bi bi-person-lines-fill me-2"></i>Auditioner Details
                        </h2>
                    </div>
                    <div class="card-body p-4 p-lg-5 text-white">
                        <!-- Member Profile Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4 text-center">
                            <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/img/default-avatar.png")" 
                                 alt="@Model.FullName" 
                                 class="avatar-lg rounded-circle border border-4 border-warning shadow mb-3" />
                            <h3 class="text-warning fw-bold fs-2 mb-2">@Model.FullName</h3>
                            <p class="text-white-50 mb-3"><i class="bi bi-envelope me-2"></i>@Model.Email</p>
                            
                            <div class="d-flex justify-content-center flex-wrap gap-2 mt-3">
                                @if (Model.AcceptedIntoFlow)
                                {
                                    <span class="badge bg-success fs-6 px-3 py-2">
                                        <i class="bi bi-check-circle me-1"></i>Accepted into Flow
                                    </span>
                                }
                                else if (Model.ShortlistedForAudition)
                                {
                                    <span class="badge bg-info fs-6 px-3 py-2">
                                        <i class="bi bi-list-check me-1"></i>Shortlisted
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning fs-6 px-3 py-2 text-dark">
                                        <i class="bi bi-clock-history me-1"></i>Pending Review
                                    </span>
                                }
                                
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success fs-6 px-3 py-2">
                                        <i class="bi bi-activity me-1"></i>Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6 px-3 py-2">
                                        <i class="bi bi-pause-circle me-1"></i>Inactive
                                    </span>
                                }
                            </div>
                        </div>
                        
                        <!-- Personal Information Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4">
                            <h5 class="text-warning fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                <i class="bi bi-person-badge"></i>
                                Personal Information
                            </h5>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Date of Birth:</div>
                                <div class="text-white flex-grow-1">@Model.DoB.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">WhatsApp Number:</div>
                                <div class="text-white flex-grow-1">@Model.WhatsAppNumber</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-0 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Biography:</div>
                                <div class="text-white flex-grow-1 text-wrap text-break">@Model.Bio</div>
                            </div>
                        </div>

                        <!-- Spiritual Journey Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4">
                            <h5 class="text-warning fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                <i class="bi bi-heart"></i>
                                Spiritual Journey
                            </h5>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Born Again Date:</div>
                                <div class="text-white flex-grow-1">@Model.BornAgainDate.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Water Baptism:</div>
                                <div class="text-white flex-grow-1">@Model.WaterBaptismDate.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Holy Spirit Baptism:</div>
                                <div class="text-white flex-grow-1">@Model.HolySpiritBaptismDate.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Hears God:</div>
                                <div class="text-white flex-grow-1">
                                    @if (Model.HearsGod)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle me-1"></i>No
                                        </span>
                                    }
                                </div>
                            </div>
                            @if (Model.HearsGod)
                            {
                                <div class="d-flex py-3 border-bottom border-0 flex-column flex-md-row">
                                    <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">How They Started:</div>
                                    <div class="text-white flex-grow-1 text-wrap text-break">@Model.HowTheyStartedHearingGod</div>
                                </div>
                            }
                        </div>

                        <!-- Application Details Section -->
                        <div class="glass-effect border border-warning border-opacity-25 rounded-4 p-4 mb-4">
                            <h5 class="text-warning fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                <i class="bi bi-chat-quote"></i>
                                Cover Speech
                            </h5>
                            <div class="text-white-50 text-wrap text-break" style="line-height: 1.6;">
                                @Model.CoverSpeech
                            </div>
                        </div>

                        @if (Model.ShortlistedForAudition)
                        {
                            <!-- Audition Information Section -->
                            <div class="glass-effect border border-info border-opacity-50 rounded-4 p-4 mb-4">
                                <h5 class="text-info fw-bold fs-5 mb-3 d-flex align-items-center gap-2">
                                    <i class="bi bi-calendar-event"></i>
                                    Audition Information
                                </h5>
                                <div class="d-flex py-3 border-bottom border-white border-opacity-10 flex-column flex-md-row">
                                    <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Audition Date:</div>
                                    <div class="text-white flex-grow-1">@Model.AuditionDate.ToString("MMMM dd, yyyy")</div>
                                </div>
                                <div class="d-flex py-3 border-bottom border-0 flex-column flex-md-row">
                                    <div class="text-white-50 fw-semibold info-label-width mb-1 mb-md-0">Audition Time:</div>
                                    <div class="text-white flex-grow-1">@Model.AuditionTime.ToString("hh:mm tt")</div>
                                </div>
                            </div>
                        }

                        <!-- Action Buttons -->
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <div class="d-flex gap-2 flex-wrap justify-content-end mt-4">
                                <a asp-action="Index" class="btn btn-glass-secondary hover-lift fw-semibold px-4 py-2 rounded-3">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning hover-lift fw-bold px-4 py-2 rounded-3 text-black">
                                    <i class="bi bi-pencil me-2"></i>Edit
                                </a>
                                @if (!Model.AcceptedIntoFlow && Model.ShortlistedForAudition)
                                {
                                    <button type="button" class="btn btn-glass-success hover-lift fw-semibold px-4 py-2 rounded-3">
                                        <i class="bi bi-check-circle me-2"></i>Accept into Flow
                                    </button>
                                }
                                @if (!Model.ShortlistedForAudition)
                                {
                                    <button type="button" class="btn btn-glass-info hover-lift fw-semibold px-4 py-2 rounded-3">
                                        <i class="bi bi-list-check me-2"></i>Shortlist for Audition
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
