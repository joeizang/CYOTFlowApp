@model FlowApplicationApp.ViewModels.Auditions.AuditionerDetailsViewModel

@{
    ViewData["Title"] = "Auditioner Details";
}

<div class="container-fluid bg-dark py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card shadow-lg border-0" style="border-radius: 1.5rem;">
                    <div class="card-body p-5">
                        <div class="row g-4">
                            <!-- Profile Image Side -->
                            <div class="col-12 col-md-4 d-flex flex-column align-items-center">
                                <div class="mb-3">
                                    <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/img/default-avatar.png")" 
                                         alt="@Model.FullName" 
                                         class="rounded-circle shadow" 
                                         style="width: 200px; height: 200px; object-fit: cover; border: 4px solid var(--bs-primary);" />
                                </div>
                                <h3 class="text-center mb-2">@Model.FullName</h3>
                                <p class="text-muted text-center mb-3">
                                    <i class="bi bi-envelope"></i> @Model.Email
                                </p>
                                
                                <div class="card w-100 mt-3 shadow-sm" style="border-radius: 1rem;">
                                    <div class="card-body text-center p-4">
                                        <h6 class="card-subtitle mb-2 text-muted">Status</h6>
                                        @if (Model.AcceptedIntoFlow)
                                        {
                                            <span class="badge bg-success fs-6">Accepted into Flow</span>
                                        }
                                        else if (Model.ShortlistedForAudition)
                                        {
                                            <span class="badge bg-info fs-6">Shortlisted</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning fs-6 rounded-3 p-2">Pending Review</span>
                                        }
                                        
                                        <div class="mt-2">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary rounded-3 p-2">Inactive</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Details Side -->
                            <div class="col-12 col-md-8">
                                <h2 class="mb-4 pb-2 border-bottom">Personal Information</h2>
                                
                                <div class="card shadow-sm mb-3" style="border-radius: 1rem;">
                                    <div class="card-body p-4">
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Date of Birth:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.DoB.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>WhatsApp Number:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.WhatsAppNumber
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <strong>Biography:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                <p class="mb-0">@Model.Bio</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <h2 class="mb-4 pb-2 border-bottom mt-4">Spiritual Journey</h2>
                                
                                <div class="card shadow-sm mb-3" style="border-radius: 1rem;">
                                    <div class="card-body p-4">
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Born Again Date:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.BornAgainDate.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Water Baptism:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.WaterBaptismDate.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Holy Spirit Baptism:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.HolySpiritBaptismDate.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Hears God:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @if (Model.HearsGod)
                                                {
                                                    <span class="badge bg-success">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No</span>
                                                }
                                            </div>
                                        </div>
                                        
                                        @if (Model.HearsGod)
                                        {
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <strong>How They Started:</strong>
                                                </div>
                                                <div class="col-sm-8">
                                                    <p class="mb-0">@Model.HowTheyStartedHearingGod</p>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <h2 class="mb-4 pb-2 border-bottom mt-4">Application Details</h2>
                                
                                <div class="card shadow-sm mb-3" style="border-radius: 1rem;">
                                    <div class="card-body p-4">
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong>Cover Speech:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                <p class="mb-0">@Model.CoverSpeech</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.ShortlistedForAudition)
                                {
                                    <h2 class="mb-4 pb-2 border-bottom mt-4">Audition Information</h2>
                                    
                                    <div class="card shadow-sm mb-3 border-info" style="border-radius: 1rem;">
                                        <div class="card-body p-4">
                                            <div class="row mb-3">
                                                <div class="col-sm-4">
                                                    <strong>Audition Date:</strong>
                                                </div>
                                                <div class="col-sm-8">
                                                    @Model.AuditionDate.ToString("MMMM dd, yyyy")
                                                </div>
                                            </div>
                                            
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <strong>Audition Time:</strong>
                                                </div>
                                                <div class="col-sm-8">
                                                    @Model.AuditionTime.ToString("hh:mm tt")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @User.Identity?.Name

                                @if (User.Identity?.IsAuthenticated  == true && User.IsInRole("Admin"))
                                {
                                    <div class="mt-4 d-flex gap-2">
                                        <a asp-action="Index" class="btn btn-secondary btn-lg" style="border-radius: 0.75rem;">
                                            <i class="bi bi-arrow-left"></i> Back to List
                                        </a>
                                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning btn-lg" style="border-radius: 0.75rem;">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        @if (!Model.AcceptedIntoFlow && Model.ShortlistedForAudition)
                                        {
                                            <button type="button" class="btn btn-success btn-lg" style="border-radius: 0.75rem;">
                                                <i class="bi bi-check-circle"></i> Accept into Flow
                                            </button>
                                        }
                                        @if (!Model.ShortlistedForAudition)
                                        {
                                            <button type="button" class="btn btn-primary btn-lg" style="border-radius: 0.75rem;">
                                                <i class="bi bi-list-check"></i> Shortlist for Audition
                                            </button>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
